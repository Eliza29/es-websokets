<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Lista de Productos</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        {{!-- Definir for each con las filas de tabla --}}
         {{#each productos}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{precio}}</td>
                    <td>
                        <img src={{foto}} alt="img" style="width: 100px;">
                    </td>
                </tr>
            {{/each}}
    </table>
</div>
{{/if}}